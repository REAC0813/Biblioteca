@using Examen.Biblioteca.Business.Entity
@model EBiblioteca
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="jumbotron">
                    <div class="panel-success">
                        <div class="panel-heading">Editar Libro</div>

                        <div class="panel-body">
                            <div class="row" style="padding-top:10px;">
                                @using (Html.BeginForm("Actualizar", "Home"))
                                {
                                    <div class="col-xs-8">
                                        <div class="input-group" style="padding-top:10px;width:100%">
                                            <span style="width:25%" class="input-group-addon" id="basic-addon1">Numero De Volumen</span>
                                            <input name="NumeroDeVolumen" style="width:75%" type="text" class="form-control" value="@Model.NumeroDeVolumen" placeholder="Nombre" aria-describedby="basic-addon1" />

                                        </div>
                                        <div class="input-group" style="padding-top:10px;width:100%">
                                            <span style="width:25%" class="input-group-addon" id="basic-addon1">TITULO</span>
                                            <input name="Titulo" style="width:75%" type="text" class="form-control" value="@Model.Titulo" placeholder="Paterno" aria-describedby="basic-addon1" />
                                        </div>

                                        <div class="row">
                                            @*<label>SALA</label>*@

                                            <div class="col-lg-9">

                                                @Html.DropDownList("idSala", null,"Sala", new { @class = "form-control", Model.Sala.Sala })
                                            </div>
                                        </div>


                                        <div class="row">
                                            @*<label>Estante</label>*@

                                            <div class="col-lg-9">

                                                @Html.DropDownList("idEstante", null,"Estante", new { @class = "form-control", Model.Estante.Estante })
                                            </div>
                                        </div>

                                        <div class="row">
                                            @*<label>Librero</label>*@

                                            <div class="col-lg-9">

                                                @Html.DropDownList("idLibrero", null,"Librero",new { @class = "form-control", Model.Librero.Librero })
                                            </div>
                                        </div>

                                        <div class="row">
                                            @*<label>Posicion</label>*@

                                            <div class="col-lg-9">

                                                @Html.DropDownList("idPosicion", null,"Posicion", new { @class = "form-control", Model.Posicion.Posicion })
                                            </div>
                                        </div>





                                    </div>
                                    <div class="col-xs-4">
                                        <input type="submit" class="btn btn-success btn-sm" style="width:100%;padding-top:10px" name="Actualizar" value="Actualizar" />
                                        <br />
                                        <input type="submit" class="btn btn-default btn-sm" style="width:100%;padding-top:10px" name="Cancelar" value="Cancelar" formaction="/Home/Index" />

                                    </div>

                                    @Html.Hidden("id", Model.id)

                                }

                            </div>
                        </div>
                    </div>



                </div>
            </div>
        </div>
    </div>
</body>
</html>